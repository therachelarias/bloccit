<div class="media">
  <div class="media-left">
    <%= image_tag(comment.user.avatar.tiny.url, class: "media-object") %>
  </div>
  <div class="media-body">
    <%= comment.body %>
    <p>
      <small>
        submitted <%= time_ago_in_words(comment.created_at) %> ago by
        <%= comment.user.name %>
      </small>
    </p>
  </div>
</div>